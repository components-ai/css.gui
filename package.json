{
  "name": "css.gui",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:docs": "turbo run build --filter./apps/docs",
    "build:packages": "turbo run build --filter=./packages/*",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "yarn turbo run clean && rm -rf node_modules",
    "nuke": "yarn clean && yarn",
    "test": "yarn pkg:test && turbo run test",
    "pkg:test": "manypkg check",
    "pkg:fix": "manypkg fix",
    "version": "yarn changeset version",
    "release": "yarn build:packages && yarn changeset publish"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "packageManager": "yarn@1.22.18",
  "dependencies": {
    "@changesets/cli": "^2.22.0",
    "@manypkg/cli": "^0.19.1",
    "prettier": "^2.6.2",
    "tsup": "^6.0.1",
    "turbo": "^1.2.14"
  }
}
